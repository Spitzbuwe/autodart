modules = ["python-3.11"]
run = "streamlit run app.py"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "streamlit run app.py --server.address 0.0.0.0 --server.headless true --server.enableCORS=false"]

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 41585187
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.address 0.0.0.0 --server.headless true --server.enableCORS=false"

[[ports]]
localPort = 8501
externalPort = 80
